<div class="productos">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h3 class="text-center">Formulario de ingreso de producto</h3>
        <form
          class="w-100"
          action="http://localhost:8080/productos"
          method="POST"
        >
          <label for="productName">Nombre producto:</label><br />
          <input class="w-100" type="text" name="productName" />
          <br />
          <br />
          <label for="productPrice">Precio producto:</label><br />
          <input class="w-100" type="number" name="productPrice" />
          <br />
          <br />
          <label for="productUrl">URL producto:</label><br />
          <input class="w-100" type="text" name="productUrl" />
          <br />
          <br />
          <input
            class="btn btn-primary w-100"
            type="submit"
            value="Guardar producto"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<hr />
<div class="lista-productos">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <table>
          {{#if productExist}}
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Imagen</th>
            </tr>
            {{#each productList}}
              <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img style="width:150px" src={{thumbnail}} /></td>
              </tr>
            {{/each}}
          {{else}}
            <p>No hay productos</p>
          {{/if}}
        </table>
      </div>
    </div>
  </div>
</div>